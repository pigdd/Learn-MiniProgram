<!-- wxs的应用，对数据进行一些处理 -->
<!-- 1.1、在页面中直接定义wxs -->
<wxs module = "xmlDemo">
  var name = "pigdd"
  var num = 15
  var sum = function(num1, num2) {
    return num1 + num2
  }

  module.exports = {
    name : name,
    num : num,
    sum : sum
  }
</wxs>
<view>{{xmlDemo.name}}</view>
<view>{{xmlDemo.sum(xmlDemo.name, xmlDemo.num)}}</view>

