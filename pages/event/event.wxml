<!--pages/event/event.wxml-->
<text>微信小程序中的事件\n</text>
<!-- 事件绑定的三种方式 -->
<button bindtap = "btnclick" size="mini">按钮\n</button>
<button bind:tap = "btnclick" size="mini">按钮2</button>
<button catch:tap = "btnclick" size="mini">按钮3</button>
<!-- 常见事件类型 -->
<view class="box"
      bind:touchstart = "handleTouchStart"
      bind:touchmove = "handleTouchMove"
      bind:touchend = "handleTouchEnd"
      bind:tap = "handleTap"
      bind:longpress = "handleLongPress">
</view>
<!-- 事件类型的一些属性 -->
<button bind:tap = "handleBtnClick" class="tyr">事件属性</button>
<!-- 
  type: 事件类型
  timeStamp:时间戳，记录打开页面到事件触发的毫秒数
  detail：事件触发时鼠标的位置
  touches和changedTouches的区别：
  touches：记录当前有几根手指在触摸小程序，并且触摸的位置
  changedTouches：记录变化，数组中只存储变化后的那一个
  在touchEnd事件和多个手机触摸时会有不同
  target和currentTarget的区别：
  currentTarget：记录触发事件的
  target：记录产生事件
 -->


<!-- 事件的传递参数 -->
<view>=====事件的传递参数=====</view>
<view class="fat">
  <block wx:for = "{{movies}}" wx:key = "index">
    <button class = "cli {{isActive == index ? 'active' : ''}}" 
            id="{{index}}"
            bind:tap = "click"
            data-index = "{{index}}"
            data-item = "{{item}}">
            {{item}}</button>
  </block>
</view>

<!-- 事件冒泡和事件捕获 -->
<!-- 事件捕获是从外面依次向里面进行事件捕获
      事件冒泡是从该事件一直向外进行冒泡
 -->
<!-- 如果用bind，事件捕获和冒泡都会执行
    如果用catch,会阻止事件的进一步传递，只会执行当前的事件
 -->